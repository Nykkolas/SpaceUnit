<vbox style="padding: 5px;">
    <style>
        .button {
            font-size: 20px;
        }
        .card-title-label {
            font-size: 20px;
            font-weight: bold;
        }
        .card-content-label {
            font-size: 15px;
            font-weight: bold;
        }
    </style>

    <hbox>
        <vbox>
            <listview id="cardList" width="200" height="150">
                <item-renderer layoutName="horizontal" width="100%">
                    <label width="100%" id="title" verticalAlign="center" />
                </item-renderer>
            </listview>
            <button text="Random pick" id="randomPick" width="100%" />
            <button text="+" id="addCard" width="100%" />

        </vbox>    
        <card id="damagesCard" width="288" height="180" hidden="true" styleName="card-title-label">
            <box width="100%" height="100%">
                <label width="100%" height="100%" id="damagesContent" verticalAlign="top" horizontalAlign="center" styleName="card-content-label" />
            </box>    
        </card>   
    </hbox>
</vbox>
